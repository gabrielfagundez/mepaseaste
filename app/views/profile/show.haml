- # Barra superior con imagen
.row
  .small-12.columns
    .panel.radius.sidebar
      .row
        .large-4.columns
          = image_tag '/img/circle.jpg'

        .large-8.columns
          .px20-separator
          .nombre-sidebar
            Gabriel Fagúndez de los Reyes
          .px20-separator
          .full-grey-line


.row
  - # Primer sidebar con ubicaciones recientes
  .large-6.columns
    .panel.radius.box-crear
      %h3
        Crear nueva
      %br
      .full-grey-line
      %p
        Consulta
      %p
        Ubicación usual

    .panel.radius.box-ubicaciones
      %h3
        Ubicaciones recientes
      %br
      .full-grey-line

  - # Primer sidebar con ubicaciones recientes
  .large-6.columns
    .panel.radius.box-consultas
      %h3
        Consultas recientes
      %br
      .full-grey-line
      %br
      - Query.recent_queries(current_user.id).each do |query|
        .panel.round
          %p
            = query.cantidad_marcadores
          %p
            = query.tipo_tarifa
          %p
            = query.shared
          %p
            = query.costo_total





