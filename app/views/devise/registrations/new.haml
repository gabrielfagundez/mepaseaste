.px50-separator

.row
  .small-10.columns.small-centered
    .full-red-upper-line
    .panel.radius.center
      %h2
        Ya estas registrado?
      %br
      .texto-secundario
        %a{href:new_user_session_path}
          Inicia Sesión
        y empieza a disfrutar de todas las funciones que
        %a{href: root_url}
          MePaseaste.UY
        tiene para vos!

.row
  .small-10.columns.small-centered
    .full-yellow-upper-line
    - if devise_error_messages! != ''
      .alert-box.radius
        %p
          = devise_error_messages!

    .panel.radius.center
      %h2 Regístrate
      .px10-separator

      = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        .row.collapse
          .small-9.columns
            = f.email_field :email, :autofocus => true
          .small-3.columns
            = f.label :email, class: 'postfix radius'

        .row.collapse
          .small-9.columns
            = f.password_field :password
          .small-3.columns
            = f.label :password, class: 'postfix radius'

        .row.collapse
          .small-9.columns
            = f.password_field :password_confirmation
          .small-3.columns
            = f.label 'Confirma tu Password', class: 'postfix radius'

        .px20-separator
        %div
          = f.submit 'Regístrate', class: 'boton-signup panel'

        .panel
          %a{href: new_user_session_path}
            Ya tienes usuario?