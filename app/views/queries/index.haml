.row
  .small-6.columns
    .full-red-upper-line
    .panel.radius
      %h2
        Consultas recientes
      - @queries.each do |query|
        %a{ href: show_data_path(query_id: query.id) }
        %a.has-tip{ href: "/show_data?query_id=#{query.id}", class: 'tip-top', title: 'Has click ingresar a la consulta', 'data-tooltip' => '' }
          .panel.radius
            .row
              .small-3.columns
                = image_tag '/img/box.png'
              .small-9.columns
                %p
                  Cantidad de marcadores ingresados:
                  = "#{ query.cantidad_marcadores}"
                %p
                  Tipo de la tarifa:
                  = "#{ query.tipo_tarifa}"
                %p
                  - if query.shared
                    Esta consulta es pública. Puedes compartirla con tus amigos ingresando aquí:
                  - else
                    No has compartido esta consulta.
            .panel.radius.center-text
              Costo total del viaje:
              = "$#{ query.costo_total}"



  .small-6.columns
    .full-blue-upper-line
    .panel.radius
      %h2
        Últimas consultas realizadas
      - @queries.each do |query|
        .panel.radius.without_padding
          .row.small_text
            .small-4.columns
              = image_tag '/img/box.png'
            .small-8.columns
              .panel.radius
                .row
                  .small-7.columns
                    = "La consulta posee #{query.cantidad_marcadores} destinos."
                  .small-5.columns
                    = "Tarifa #{ query.tipo_tarifa }"
              .panel.radius.without_padding
                .row
                  .small-8.columns
                    .costo_box
                      = "Costo: $#{ query.costo_total }"
                  .small-4.columns
                    - if query.shared?
                      .shared.panel
                        Pública
                    - else
                      .not-shared.panel
                        Privada



